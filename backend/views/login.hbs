<div class="form-container">
    <h1>Login to Wild West Forum</h1>
    <p>Welcome back, partner! Enter your credentials to continue.</p>

    {{#if error}}
        <div class="alert alert-error">
            {{error}}
        </div>
    {{/if}}

    {{#if success}}
        <div class="alert alert-success">
            {{success}}
        </div>
    {{/if}}

    <form action="/login" method="POST" class="auth-form">
        <div class="form-group">
            <label for="username">Username:</label>
            <input type="text" id="username" name="username" required placeholder="Your cowboy name">
        </div>

        <div class="form-group">
            <label for="password">Password:</label>
            <input type="password" id="password" name="password" required placeholder="Your secret phrase">
        </div>

        <button type="submit" class="btn btn-primary">Login</button>
    </form>

    <div class="auth-links">
        <p>Don't have an account? <a href="/register">Register here</a></p>
        <p><a href="/">‚Üê Back to Home</a></p>
    </div>
</div>
