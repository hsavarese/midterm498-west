<div class="comments-container">
    <div class="comments-header">
        <h1>Frontier Tales & Stories</h1>
        <p>{{count}} tales shared by our community</p>
        
        {{#if user}}
            <a href="/comment-new" class="btn btn-primary">Share Your Story</a>
        {{else}}
            <p><a href="/login">Login</a> to share your own frontier tale!</p>
        {{/if}}
    </div>

    {{#if error}}
        <div class="alert alert-error">
            {{error}}
        </div>
    {{/if}}

    <div class="comments-list">
        {{#if comments}}
            {{#each comments}}
                <div class="comment-card">
                    <div class="comment-header">
                        <strong class="comment-author">{{author}}</strong>
                        <span class="comment-date">{{createdAt}}</span>
                    </div>
                    <div class="comment-text">
                        {{text}}
                    </div>
                </div>
            {{/each}}
        {{else}}
            <div class="no-comments">
                <h3>No tales shared yet!</h3>
                <p>Be the first brave soul to share your frontier story.</p>
                {{#if user}}
                    <a href="/comment-new" class="btn btn-primary">Share the First Tale</a>
                {{else}}
                    <a href="/register" class="btn btn-primary">Join & Share Your Story</a>
                {{/if}}
            </div>
        {{/if}}
    </div>
</div>
