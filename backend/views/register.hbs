<div class="form-container">
    <h1>hey, join us!</h1>
    <p>make an account and start sharing your stuff!</p>

    {{#if error}}
        <div class="alert alert-error">
            {{error}}
        </div>
    {{/if}}

    <form action="/register" method="POST" class="auth-form">
        <div class="form-group">
            <label for="username">username:</label>
            <input type="text" id="username" name="username" required placeholder="pick something cool">
        </div>

        <div class="form-group">
            <label for="password">password:</label>
            <input type="password" id="password" name="password" required placeholder="dont make it 123456 lol">
        </div>

        <button type="submit" class="btn btn-primary">sign me up!</button>
    </form>

    <div class="auth-links">
        <p>Already have an account? <a href="/login">Login here</a></p>
        <p><a href="/">‚Üê Back to Home</a></p>
    </div>
</div>